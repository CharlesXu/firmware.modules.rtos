OpenDRV OpenDRV {

	GENERAL GenConfig {
		StartUp = ENABLE;
		Mcu = ENABLE;
		Dio = ENABLE;
		Eth = DISABLE;
		Pwm = ENABLE;
	};

	DRIVER StartUp {
	};

	DRIVER Mcu {
		GENERAL McuGeneral {
			DET = FALSE;
			CLK = 12000;
		}
	}

	DRIVER Pwm {
		GENERAL PwmGeneral {
			DET = FALSE;
			PWM_DE_INIT_API = FALSE;
			PWM_GET_OUTPUT_STATE_API = FALSE;
