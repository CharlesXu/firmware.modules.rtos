				PWM_IDLE_STATE = PWM_LOW;
				PWM_PERIOD_DEFAULT = 0.02;
				PWM_POLARITY = PWM_HIGH;
			}			
		
		}

	}

	DRIVER Dio {
		GENERAL DioGeneral {
			DET = FALSE;
		}

		CONFIG DioConfig01 {

			CHANNEL LIGHT_GEAR_R {
				NAME = LIGHT_GEAR_1;
