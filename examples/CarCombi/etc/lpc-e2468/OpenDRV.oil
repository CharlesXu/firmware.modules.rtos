			}

			CHANNEL LIGHT_GEAR_1 {
				NAME = LIGHT_GEAR_1;
				PORT = 4;
				PIN = 16;
				DIRECTION = OUTPUT;
			}

			CHANNEL LIGHT_GEAR_2 {
