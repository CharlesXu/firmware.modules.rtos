				PORT = 4;
				PIN = 16;
				DIRECTION = OUTPUT;
			}

			CHANNEL LIGHT_GEAR_3 {
				NAME = LIGHT_GEAR_1;
				PORT = 4;
				PIN = 16;
				DIRECTION = OUTPUT;
			}

			CHANNEL LIGHT_GEAR_4 {
				NAME = LIGHT_GEAR_1;
				PORT = 4;
				PIN = 16;
				DIRECTION = OUTPUT;
			}

			CHANNEL BUTTON_GEAR_UP {
				NAME = BUTTON_GEAR_UP;
				PORT = 2;
				PIN = 13;
				DIRECTION = INPUT;
			}

			CHANNEL BUTTON_GEAR_DOWN {
				NAME = BUTTON_GEAR_DOWN;
				PORT = 2;
				PIN = 21;
				DIRECTION = INPUT;
			}
			
