TASK InitTask {
   PRIORITY = 1;
   SCHEDULE = NON;
   ACTIVATION = 1;
   AUTOSTART = TRUE {
      APPMODE = AppMode1;
      };
   STACK = 128;
   TYPE = EXTENDED;
};

TASK BlinkingLedsTask {
	PRIORITY = 1;
	SCHEDULE = NON;
	ACTIVATION = 1;
